<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_no_data"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data_available"
            android:textSize="@dimen/baseTextSize"/>

        <Button
            android:id="@+id/btn_reload"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reload"
            android:textSize="@dimen/baseTextSize"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_translate_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_no_translate"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_above="@+id/language_panel"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data_available"
                android:textSize="@dimen/baseTextSize"/>

            <Button
                android:id="@+id/btn_reload_translate"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reload"
                android:textSize="@dimen/baseTextSize"/>
        </LinearLayout>

        <com.lb.auto_fit_textview.AutoResizeTextView
            android:hint=""
            android:id="@+id/tv_output"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/language_panel"
            android:textColor="@color/textTranslated"
            android:gravity="center"
            android:scrollbars="vertical"
            android:fontFamily="@string/font_family_light"
            android:singleLine="false"
            android:padding="10dp"
            android:text=""
            android:textIsSelectable="true"
            android:textSize="@dimen/translateTextSizeBig"/>

        <ProgressBar
            android:id="@+id/pb_output"
            android:layout_width="wrap_content"
            android:indeterminate="true"
            android:layout_alignTop="@+id/tv_output"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/language_panel"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/input_panel"
            android:background="@color/bgLanguagePanel"
            android:gravity="center"
            android:padding="15dp">

            <Spinner
                android:id="@+id/sp_lang_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/ib_swap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@mipmap/swap"/>

            <Spinner
                android:id="@+id/sp_lang_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/input_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp">

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:text=""
                android:textSize="@dimen/inputTextSize"
                android:hint="@string/hitInput"
                android:scrollbars="vertical"
                android:textColor="@color/textInput"/>

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_notification_clear_all"/>

        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>
